{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",                                  
    "module": "ESNext",                                
    "moduleResolution": "node",                       
    "lib": ["DOM", "DOM.Iterable", "WebWorker", "ESNext"],   
    "baseUrl": "src",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "jsxImportSource": "@emotion/react",
    "skipLibCheck": true,
    "types": ["vitest/globals", "vite-plugin-pwa/client"]
  },
  "include": ["src/**/*"]
}
